{
  "name": "react-exhibit-boilerplate",
  "version": "1.0.2",
  "description": "React component library boilerplate",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "build:dist": "node scripts/build.js",
    "build": "node scripts/build-docs.js",
    "check:staged": "npm run lint && npm run test:staged",
    "clean": "rm -rf node_modules build docs dist && npm i",
    "commit": "npm run check:staged && git-cz",
    "deploy": "gh-pages -d build",
    "lint": "eslint --ignore-pattern 'src/**/*.demo.js' --ignore-pattern 'src/**/*.test.js' 'src/**/*.js'",
    "postcheckout": "npm run clean",
    "postmerge": "npm run clean",
    "predeploy": "npm run build",
    "prepublishOnly": "npm run check:staged && npm run build:dist",
    "start": "node scripts/start.js",
    "start:docs": "serve docs",
    "test": "node scripts/test.js --env=jsdom",
    "test:staged": "CI=true node scripts/test.js --env=jsdom"
  },
  "dependencies": {
    "jsdoc2js-loader": "^1.0.2",
    "markdown-to-jsx": "^5.4.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-exhibit": "^1.1.2",
    "react-prism": "^4.3.0",
    "react-router-dom": "^4.1.2",
    "require-dir": "^0.3.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "autoprefixer": "7.1.1",
    "babel-core": "6.25.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "20.0.3",
    "babel-loader": "7.0.0",
    "babel-preset-react-app": "^3.0.1",
    "babel-runtime": "6.23.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "1.1.3",
    "commitizen": "^2.9.6",
    "css-loader": "0.28.4",
    "cz-conventional-changelog": "^2.0.0",
    "dotenv": "4.0.0",
    "eslint": "3.19.0",
    "eslint-config-react-app": "^1.0.5",
    "eslint-loader": "1.7.1",
    "eslint-plugin-flowtype": "2.34.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.1.0",
    "extract-text-webpack-plugin": "2.1.2",
    "file-loader": "0.11.2",
    "fs-extra": "3.0.1",
    "gh-pages": "^1.0.0",
    "html-webpack-plugin": "2.29.0",
    "jest": "20.0.4",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.0.0",
    "postcss-loader": "2.0.6",
    "promise": "7.1.1",
    "raw-loader": "^0.5.1",
    "react-dev-utils": "^3.0.2",
    "react-error-overlay": "^1.0.9",
    "serve": "^6.0.2",
    "style-loader": "0.18.2",
    "sw-precache-webpack-plugin": "0.11.3",
    "url-loader": "0.5.9",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.5.0",
    "webpack-manifest-plugin": "1.1.0",
    "whatwg-fetch": "2.0.3"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/au-re/react-exhibit-boilerplate.git"
  }
}
